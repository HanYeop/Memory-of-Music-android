<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.lock.LockActivity"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/image_fingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:src="@drawable/ic_baseline_fingerprint_36" />

        <TextView
            android:layout_marginTop="@dimen/margin_16"
            style="@style/lock_header_text"
            android:text="@string/unlock" />

        <TextView
            android:layout_marginTop="@dimen/margin_narrow_8"
            style="@style/lock_body_text"
            android:text="@string/unlock_detail" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_16">

            <TextView
                style="@style/lock_number_text"
                android:text="●"
                android:layout_marginEnd="@dimen/margin_narrow_8" />

            <TextView
                style="@style/lock_number_text"
                android:text="●"
                android:layout_marginEnd="@dimen/margin_narrow_8" />

            <TextView
                style="@style/lock_number_text"
                android:text="●"
                android:layout_marginEnd="@dimen/margin_narrow_8" />

            <TextView
                style="@style/lock_number_text"
                android:text="●" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="160dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_one"
                    style="@style/lock_number_select_text"
                    android:text="1" />

                <TextView
                    android:id="@+id/text_two"
                    style="@style/lock_number_select_text"
                    android:text="2" />

                <TextView
                    android:id="@+id/text_three"
                    style="@style/lock_number_select_text"
                    android:text="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_four"
                    style="@style/lock_number_select_text"
                    android:text="4" />

                <TextView
                    android:id="@+id/text_five"
                    style="@style/lock_number_select_text"
                    android:text="5" />

                <TextView
                    android:id="@+id/text_six"
                    style="@style/lock_number_select_text"
                    android:text="6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_seven"
                    style="@style/lock_number_select_text"
                    android:text="7" />

                <TextView
                    android:id="@+id/text_eight"
                    style="@style/lock_number_select_text"
                    android:text="8" />

                <TextView
                    android:id="@+id/text_nine"
                    style="@style/lock_number_select_text"
                    android:text="9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/lock_number_select_text"
                    android:text="" />

                <TextView
                    android:id="@+id/text_zero"
                    style="@style/lock_number_select_text"
                    android:text="0" />

                <ImageButton
                    android:id="@+id/image_backspace"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_lock"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_backspace_24" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>